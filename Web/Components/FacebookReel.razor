<iframe title="facebook reel" src="@ReelEmbedUrl" allowfullscreen="true" height="500"></iframe>

@code {
    private string ReelEmbedUrl => $"https://www.facebook.com/plugins/video.php?href={Uri.EscapeDataString(ReelUrl!.AbsoluteUri)}&show_text=false&t=0";

    [Parameter, EditorRequired]
    public Uri? ReelUrl { get; set; }
}
