<div class="fixed">
    <button 
        type="button"
        class="border-1 [border-color:canvastext] p-2 focus:bg-gray-100 hover:bg-gray-100 rounded-lg transition-colors duration-200 focus:outline-none"
        @onclick="ToggleMenu"
        aria-label="Toggle menu">
        <svg 
            class="w-6 h-6 [color:canvastext]" 
            fill="none" 
            stroke="currentColor" 
            viewBox="0 0 24 24">
            <path 
                strokeLinecap="round" 
                strokeLinejoin="round" 
                strokeWidth="2" 
                d="M4 6h16M4 12h16M4 18h16" />
        </svg>
    </button>
    
    <div class="@(_isOpen ? "translate-y-0 opacity-100 visible" : "translate-y-2 opacity-0 invisible") absolute left-0 mt-2 w-48 [background:canvastext] rounded-lg shadow-lg transform transition-all duration-200 ease-in-out">
        <nav>
            <menu class="py-1">
                <li>
                    <NavLink 
                        href="#whats-on"
                        class="block px-4 py-2 text-gray-700 hover:bg-gray-100 transition-colors duration-200"
                        ActiveClass="bg-gray-100 text-gray-900"
                        @onclick="ToggleMenu">
                        What's On
                    </NavLink>
                </li>
                <li>
                    <NavLink 
                        href="promotions"
                        class="block px-4 py-2 text-gray-700 hover:bg-gray-100 transition-colors duration-200"
                        ActiveClass="bg-gray-100 text-gray-900"
                        @onclick="ToggleMenu">
                        Promotions
                    </NavLink>
                </li>
            </menu>
        </nav>
    </div>
</div>

@code {
    private bool _isOpen;

    private void ToggleMenu()
    {
        _isOpen = !_isOpen;
    }
}
